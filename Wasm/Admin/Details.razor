@page "/admin/details/{Id:int}"

@inherits ItemBase

<Banner BannerTitleParameter="@this.BannerTitleValue" AppNameParameter="@this.AppNameValue" />

<div class="container">
    @if(this.Item?.Id == 0)
    {
        <div class="card">
            <div class="card-body">
                <p class="card-text">No Item to show.</p>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    #@this.EntryId: @this.Item.Title
                </h5>
                <p class="card-text">
                    Done: @this.IsDone
                </p>

                <a class="btn btn_primary btn_sm" href="@ItemConstants.Url_S_Items_Admin">
                    Back
                </a>
                <a class="btn btn_primary btn_sm" href="@this.UrlUpdate">
                    Edit
                </a>
                <a class="btn btn_danger btn_sm" href="@this.UrlDelete">
                    X
                </a>
            </div>
        </div>
    }
</div>

<div class="page-top">
    <NavLink href="@PageRoute.AdminDetails" class="top"></NavLink>
</div>
